<h1>Listing works</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @works.each do |work| %>
      <tr>
        <td><%= work.time_start %></td>
        <td><%= work.time_end %></td>
        <td><%= truncate(work.desc, 25) %></td>
        <td><%= link_to 'Edit', edit_work_path(work) %></td>
        <td><%= link_to 'Destroy', work, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

