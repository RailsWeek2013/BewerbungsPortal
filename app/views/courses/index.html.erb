<p id="notice"><%= notice %></p>

<br>

<h1><%= I18n.t("listing_cours")%></h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t("from")%></th>
      <th><%= I18n.t("to")%></th>
      <th><%= I18n.t("desc")%></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= I18n.l course.time_start %></td>
        <td><%= I18n.l course.time_end %></td>
        <td><%= truncate(course.desc, 25) %></td>
        <td><%= link_to I18n.t("edit"), edit_course_path(course) %></td>
        <td><%= link_to I18n.t("delete"), course, method: :delete, data: { confirm: I18n.t("msg_confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<% if @courses.count < 4 %>
  <%= link_to I18n.t("new_course"), new_course_path %>
<% end %>