<h1>Listing courses</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
         <td><%= course.time_start %></td>
        <td><%= course.time_end %></td>
        <td><%= course.desc %></td>
        <td><%= link_to 'Edit', edit_course_path(course) %></td>
        <td><%= link_to 'Destroy', course, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

