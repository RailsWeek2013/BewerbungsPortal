<%= form_for @profile, :html => { :multipart => true } do |f| %>
  <% if @profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% @profile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

 <table>
  <tr>
    <td><strong><%= f.label :firstName %></strong></td>
    <td><%= f.text_field :firstName %></td>
  </tr> 
  <tr>
    <td><strong><%= f.label :name %></strong></td>
    <td><%= f.text_field :name %></td>
  </tr>
  <tr>
    <td><strong><%= f.label :birthday %></strong></td>
    <td><%= f.date_select :birthday, :start_year => 1900, :end_year => 2000  %></td>
  </tr>
  <%= f.fields_for :address do |addresses_form| %>
  <tr>
    <td><strong> <%= addresses_form.label :street %></strong></td>
    <td><%= addresses_form.text_field :street %></td>
  </tr>
  <tr>
    <td><strong><%= addresses_form.label :city %></strong></td>
    <td><%= addresses_form.text_field :city %></td>
  </tr>
  <tr>
    <td><strong><%= addresses_form.label :zip %></strong></td>
    <td><%= addresses_form.text_field :zip %></td>
  </tr>
  <% end %>
  <tr>
    <td><strong><%= f.label :marialStatus %></strong></td>
    <td><%= f.text_field :marialStatus %></td>
  </tr>
  <tr>
    <td><strong><%= f.label :telefon %><br></strong></td>
    <td><%= f.text_field :telefon %></td>
  </tr>
  <tr>
    <td><strong>Avatar</strong></td>
    <td><%= f.file_field :avatar %></td>
  </tr>
  <tr>
    <td><strong>Signature</strong></td>
    <td><%= f.file_field :signature %></td>
  </tr>
</table>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
