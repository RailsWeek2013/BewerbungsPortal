<div id = "info_div">
  <p id="notice"><%= notice %></p>

  <br/>

  <p>
    <h1> <%= I18n.t("general_info")%> </h1>
    <hr>
  </p>
  
  <br/>

  <table style = "width:100%">
    <tr>
      <td><strong><%= I18n.t("name")%></strong></td>
      <td><%= @profile.firstName %> <%= @profile.name %></td>
    </tr>
    <tr>
      <td><strong><%= I18n.t("birthday")%></strong></td>
      <td><%= @profile.birthday %></td>
    </tr>
    <tr>
      <td><strong><%= I18n.t("status")%></strong></td>
      <td><%= @profile.marialStatus %></td>
    </tr>
    <tr>
      <td><strong><%= I18n.t("telefon")%></strong></td>
      <td><%= @profile.telefon %></td>
    </tr>
  </table>

  <br>

  <p>
    <h1><%= I18n.t("address")%></h1>
    <hr>
  </p>

  <br/>

  <table style = "width:100%">
    <tr>
      <td><strong><%= I18n.t("street")%></strong></td>
      <td><%= @profile.address.street %></td>
    </tr>
    <tr>
      <td><strong><%= I18n.t("city")%></strong></td>
      <td><%= @profile.address.city %></td>
    </tr>
    <tr>
      <td><strong><%= I18n.t("zip")%></strong></td>
      <td><%= @profile.address.zip %></td>
    </tr>
  </table>

  <%= link_to I18n.t("edit"), edit_profile_path(@profile) %> |
  <%= link_to I18n.t("delete"), profile_path, method: :delete %>
</div>

<div id = "image_div">
  
  <%= image_tag @profile.avatar.url(:medium) %><br>
  <%= image_tag @profile.signature.url(:medium) %>
</div>


