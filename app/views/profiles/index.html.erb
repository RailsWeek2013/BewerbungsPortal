<h1>Listing profiles</h1>

<table>
  <thead>
    <tr>
      <th>Firstname</th>
      <th>Name</th>
      <th>Birthday</th>
      <th>Address</th>
      <th>Marialstatus</th>
      <th>Telefon</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <%  if profile != nil %>
      <tr>
        <td><%= profile.firstName %></td>
        <td><%= profile.name %></td>
        <td><%= I18n.l profile.birthday %></td>
        <td><%= profile.address.street %></td>
        <td><%= profile.marialStatus %></td>
        <td><%= profile.telefon %></td>
        <td><%= link_to 'Show', profile %></td>
        <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        <td><%= link_to 'Destroy', profile, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>

