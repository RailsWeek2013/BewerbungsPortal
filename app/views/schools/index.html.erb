<h1>Listing schools</h1>

<table>
  <thead>
    <tr>
      <th>From</th>
      <th>To</th>
      <th>Description</th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= school.time_start %></td>
        <td><%= school.time_end %></td>
        <td><%= school.desc %></td>
        <td><%= link_to 'Edit', edit_school_path(school) %></td>
        <td><%= link_to 'Destroy', school, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

