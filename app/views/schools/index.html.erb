<p id="notice"><%= notice %></p>

<br>

<h1><%= I18n.t("school_list")%></h1>

<table>
  <thead>
    <tr>
      <th><%= I18n.t("from")%></th>
      <th><%= I18n.t("to")%></th>
      <th><%= I18n.t("desc")%></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @schools.each do |school| %>
      <tr>
        <td><%= I18n.l school.time_start %></td>
        <td><%= I18n.l school.time_end %></td>
        <td><%= truncate(school.desc, 25) %></td>
        <td><%= link_to I18n.t("edit"), edit_school_path(school) %></td>
        <td><%= link_to I18n.t("delete"), school, method: :delete, data: { confirm: I18n.t("msg_confirm") } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if @schools.count < 4 %>
  <%= link_to I18n.t("new_school"), new_school_path %>
<% end %>